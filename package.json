{
  "name": "wechat-app-boilerplate",
  "version": "1.1.0",
  "description": "Boilerplate for Angular 1.x WeChat HTML5 Webapps",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://gitlab.mcon-group.com/cloud-team/wechat-app-boilerplate.git"
  },
  "author": "Irina Mo",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.6.4",
    "angular-mocks": "^1.6.4",
    "angular-ui-router": "^0.3.2",
    "autoprefixer": "^7.1.0",
    "eslint-config-google": "^0.7.1",
    "istanbul-instrumenter-loader": "^1.2.0",
    "jasmine": "^2.6.0",
    "jasmine-core": "^2.6.1",
    "karma": "^1.7.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-webpack": "^1.8.1",
    "less": "^2.7.2",
    "ng-cache-loader": "^0.0.21",
    "npm-run-all": "^3.1.2",
    "onchange": "^3.2.1",
    "phantomjs-prebuilt": "^2.1.14",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^8.2.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^7.10.1",
    "webpack": "^1.15.0",
    "webpack-dev-server": "^1.16.5",
    "weui": "^1.1.2"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.0",
    "istanbul-instrumenter-loader": "^1.0.0",
    "jasmine": "^2.5.2",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-sourcemap-writer": "^0.1.2",
    "karma-webpack": "^1.8.0",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "phantomjs-prebuilt": "^2.1.13",
    "pre-commit": "^1.1.3",
    "stylelint": "^7.5.0",
    "stylelint-config-standard": "^14.0.0"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:* serve",
    "serve": "webpack-dev-server --hot --inline --progress --colors",
    "build:css": "lessc ./src/style/style.less | postcss --use autoprefixer --output ./src/assets/style.css",
    "prewatch:css": "npm run build:css",
    "watch:css": "onchange './src/style/*.less' -- npm run build:css",
    "dist:css": "lessc src/style/style.less | postcss --use autoprefixer --output ./dist/assets/style.css",
    "dist:js": "webpack --bail --progress --profile",
    "predist": "rm -rfv ./dist && mkdir ./dist && cp -v ./src/index.html ./dist",
    "dist": "npm-run-all dist:*",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint ./src/**/*.js; true",
    "lint:stylelint": "stylelint --syntax less ./src/style/**/*.less; true",
    "pretest": "rm -rf ./coverage",
    "test": "karma start",
    "watch:test": "karma start --auto-watch --no-single-run"
  },
  "pre-commit": [
    "lint"
  ]
}
